@model Feature.SitecoreModule.ViewModels.SearchResultsViewModel
@{
    Layout = null;
    var count = 0;
}
    <div class="container">
        <h1>
            <p>&nbsp;</p>
            Search Modules
        </h1>
        <p>Search results for keyword '@(Model.Keyword)'</p>
        <ul class="custom-list">
            @foreach (var entry in Model.Results)
            {
            <li>
                @if (count == 0)
                {
                    <hr />
                }

                <h3>
                    <a href="@(Sitecore.Links.LinkManager.GetItemUrl(entry.InnerItem))">
                        @entry.ModuleName
                    </a>
                </h3>
                <p>
                    @entry.Description
                </p>
                <p>
                    Created by @entry.CreatedBy in @Sitecore.DateUtil.IsoDateToDateTime(entry.Created)

                </p>
                <hr />

            </li>
                count++;
            }
        </ul>
    </div>

