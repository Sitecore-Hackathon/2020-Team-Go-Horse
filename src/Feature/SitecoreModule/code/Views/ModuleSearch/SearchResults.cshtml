@model Feature.SitecoreModule.ViewModels.SearchResultsViewModel
@{
    Layout = null;
}
<div class="container">
    <h1>
        <p>&nbsp;</p>
        Search Modules
    </h1>
    <p>Search results for keyword '@(Model.Keyword)'</p>
    <ul>
        @foreach (var entry in Model.Results)
        {
            <li>
                <h3>
                    <a href="@(Sitecore.Links.LinkManager.GetItemUrl(entry.InnerItem))">
                        @entry.ModuleName
                    </a>
                </h3>
                <p>
                    @entry.Description
                </p>
            </li>
        }
    </ul>
</div>